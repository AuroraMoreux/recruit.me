@model RecruitMe.Web.ViewModels.JobOffers.AllViewModel
@using RecruitMe.Common
@{
    ViewData["Title"] = "Current Job Offers";

    var jobOffers = this.Model.JobOffers.ToList();
}
@if (this.ViewData["IsFromSearch"] != null)
{
    <h1 style="display:inline">@ViewData["IsFromSearch"]</h1>
}
else
{
    <h1 style="display:inline">@ViewData["Title"]</h1>
    <a class="btn btn-primary float-right" asp-action="Search" asp-controller="JobOffers">Search Offers</a>
}
@if (this.TempData["SuccessfulApplication"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessfulApplication"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (this.TempData["JobOfferUpdated"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["JobOfferUpdated"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (this.TempData["JobOfferPosted"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["JobOfferPosted"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="table-responsive">
    <table class="table table-hover table-responsive">
        <thead>
            <tr>
                <th scope="col">Job Title</th>
                <th scope="col">Employer</th>
                <th scope="col">Position Level</th>
                <th scope="col">Location</th>
                <th scope="col">Published On <a style="margin: 5px" asp-action="All" asp-controller="JobOffers" asp-route-dateSortOrder="@ViewData["DateSortParam"]"><icon class="fas fa-sort"></icon></a></th>
                <th scope="col">Sector</th>
                <th scope="col">Position Specifics</th>

                <th style="text-align:center">
                    @if (ViewData["IsFromSearch"] != null)
                    {
                        <a class="btn btn-warning" asp-controller="JobOffers" asp-action="Search">Back to Search</a>
                    }
                    else
                    {
                        @if (this.User.IsInRole(GlobalConstants.EmployerRoleName))
                        {
                            <a class="btn btn-success" asp-controller="JobOffers" asp-action="Post">Post New Job Offer</a>
                        }
                    }
                </th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < jobOffers.Count; i++)
            {
                <tr>
                    <td class="text-break">@jobOffers[i].Title</td>
                    <td>@jobOffers[i].EmployerName</td>
                    <td>@jobOffers[i].JobLevelName</td>
                    <td>@jobOffers[i].City</td>
                    <td>@jobOffers[i].CreatedOn.Date.ToString("dd-MM-yyyy")</td>
                    <td>@jobOffers[i].JobSectorName</td>
                    <td>@jobOffers[i].JobDetails</td>
                    <td>
                        <a class="btn btn-info text-nowrap" asp-controller="JobOffers" asp-action="Details" asp-route-id="@jobOffers[i].Id">View Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @if (Model.PagesCount > 0)
    {
        <div class="text-center">
            <ul class="pagination">
                <li><a style="margin: 5px" href="~/JobOffers/All?page=@Model.PreviousPage"><icon class="fas fa-angle-left"></icon></a></li>
                @for (int i = 1; i <= Model.PagesCount; i++)
                {
                    if (i == Model.CurrentPage)
                    {
                        <li class="active"><a style="margin: 5px" href="~/JobOffers/All?page=@i">@i</a></li>
                    }
                    else
                    {
                        <li><a style="margin: 5px" href="~/JobOffers/All?page=@i">@i</a></li>
                    }
                }
                <li><a style="margin: 5px" href="~/JobOffers/All?page=@Model.NextPage"><icon class="fas fa-angle-right"></icon></a></li>
            </ul>
        </div>
    }
</div>
