@model RecruitMe.Web.ViewModels.Employers.CreateEmployerProfileInputModel
@{
    ViewData["Title"] = "Create Profile";
    var jobSectors = Model.JobSectors.Select(js => new SelectListItem(js.Name, js.Id.ToString()));
}

<h1>@ViewData["Title"]</h1>

<div>
    <form class="asp-controller=" Employers" asp-action="CreateProfile" method="post" enctype="multipart/form-data">

        <div class="col-6">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Logo">Upload a logo...</label>
                <input asp-for="Logo" class="form-control" />
                <span asp-validation-for="Logo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UniqueIdentificationCode"></label>
                <input asp-for="UniqueIdentificationCode" class="form-control" />
                <span asp-validation-for="UniqueIdentificationCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="WebsiteAddress"></label>
                <input asp-for="WebsiteAddress" class="form-control" />
                <span asp-validation-for="WebsiteAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="JobSectorId"></label>
                <select asp-for="JobSectorId" asp-items="jobSectors"class="form-control"></select> 
                <span asp-validation-for="JobSectorId" class="text-danger"></span>
            </div>
            <hr />
            <input type="submit" value="Send" class="btn btn-primary" />
        </div>

        <div class="col-6">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="@Model.">Upload a logo...</label>
                <input asp-for="@Model.Logo" class="form-control" />
                <span asp-validation-for="@Model.Logo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Name"></label>
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.UniqueIdentificationCode"></label>
                <input asp-for="@Model.UniqueIdentificationCode" class="form-control" />
                <span asp-validation-for="@Model.UniqueIdentificationCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.WebsiteAddress"></label>
                <input asp-for="@Model.WebsiteAddress" class="form-control" />
                <span asp-validation-for="@Model.WebsiteAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.PhoneNumber"></label>
                <input asp-for="@Model.PhoneNumber" class="form-control" />
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Address"></label>
                <input asp-for="@Model.Address" class="form-control" />
                <span asp-validation-for="@Model.Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.PhoneNumber"></label>
                <input asp-for="@Model.PhoneNumber" class="form-control" />
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
            <hr />
            <input type="submit" value="Send" class="btn btn-primary" />
        </div>
    </form>
</div>