@model RecruitMe.Web.ViewModels.Employers.CreateEmployerProfileInputModel
@{
    ViewData["Title"] = "Create Profile";
}

<h1>@ViewData["Title"]</h1>

<div class="col-md-4">
    <form asp-controller="Employers" asp-action="CreateProfile" method="post" enctype="multipart/form-data">

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="@Model.Logo">Upload a logo...</label>
            <input asp-for="@Model.Logo" class="form-control" />
            <span asp-validation-for="@Model.Logo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="@Model.Name"></label>
            <input asp-for="@Model.Name" class="form-control" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="@Model.UniqueIdentificationCode"></label>
            <input asp-for="@Model.UniqueIdentificationCode" class="form-control" />
            <span asp-validation-for="@Model.UniqueIdentificationCode" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="@Model.WebsiteAddress"></label>
            <input asp-for="@Model.WebsiteAddress" class="form-control" />
            <span asp-validation-for="@Model.WebsiteAddress" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="@Model.PhoneNumber"></label>
            <input asp-for="@Model.PhoneNumber" class="form-control" />
            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="@Model.Address"></label>
            <input asp-for="@Model.Address" class="form-control" />
            <span asp-validation-for="@Model.Address" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="@Model.PhoneNumber"></label>
            <input asp-for="@Model.PhoneNumber" class="form-control" />
            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
        </div>
        <hr />
        <input type="submit" value="Send" class="btn btn-primary" />
    </form>
</div>
