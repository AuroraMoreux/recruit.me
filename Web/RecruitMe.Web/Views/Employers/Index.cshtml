@model RecruitMe.Web.ViewModels.Employers.IndexViewModel

@{
    ViewData["Title"] = "Employers Homepage";
    string logoUrl = this.Model.LogoUrl != null ? this.Model.LogoUrl : "/img/profile-placeholder.png";
}

<h1>@ViewData["Title"]</h1>

@if (this.TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<h3>Welcome</h3>
@if (!User.Identity.IsAuthenticated)
{
    <p>Looking for the perfect candidate for your position?</p>
    <p>Our platform connects you with top-tier motivated and qualified professionals looking for an exciting new career which will help you boost your business and reach your goals! </p>

    <p>If you are interested in posting a job offer on our platform and connecting with potential candidates, <a style="display:inline" href="/Identity/Account/Register">please register here.</a></p>
    <p>If you already have an account, <a style="display:inline" href="/Identity/Account/Login">please sign in.</a></p>

    <br />
    <hr />
    <div class="row">
        <div class="card text-center">
            <div class="card-body">
                <h4 class="card-title" style="display:inline-block">Testimonials</h4>
                <hr />
                <p class="card-text"><h6>John Smith, Senior .NET Developer</h6></p>
                <p>Working with Recruit.Me has helped me find my current position as a developer in my dream company. The process was easy and effortless and I would recommend the platform to all of my friends and acquaintances.</p>
            </div>
            <div class="card-body">
                <p class="card-text"><h6>ACME Inc.</h6></p>
                <p>The platform has helped our company hire some of our best employees easily and efficiently, which has brought immense value and know-how to our business not only with our clients, but with our partners as well!</p>
            </div>
        </div>
    </div>
}
else if (!Model.IsProfileCreated)
{
    <p>Ready to meet our professionals and hire the perfect candidate? Let us know more about you by <a style="display:inline" href="/Employers/CreateProfile">filling out your profile details.</a></p>
    <br />
    <hr />

    <div class="row">
        <div class="card text-center">
            <div class="card-body">
                <h4 class="card-title" style="display:inline-block">Testimonials</h4>
                <hr />
                <p class="card-text"><h6>John Smith, Senior .NET Developer</h6></p>
                <p>Working with Recruit.Me has helped me find my current position as a developer in my dream company. The process was easy and effortless and I would recommend the platform to all of my friends and acquaintances.</p>
            </div>
            <div class="card-body">
                <p class="card-text"><h6>ACME Inc.</h6></p>
                <p>The platform has helped our company hire some of our best employees easily and efficiently, which has brought immense value and know-how to our business not only with our clients, but with our partners as well!</p>
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="card">
            <img class="card-img-top img-thumbnail" src="@logoUrl" style="width: 300px; height: 300px;">
        </div>
        <div class="card flex-fill">
            <div class="row">
                <div class="card-body col-6">
                    <h5 class="card-title" style="display:inline-block"><strong>Profile Details:</strong></h5>
                    <div class="card-text"><strong>Name: </strong>@Model.Name</div>
                    <div class="card-text"><strong>Email Address: </strong>@Model.ApplicationUserEmail</div>
                    <div class="card-text"><strong>Phone Number: </strong>@(Model.PhoneNumber!=null?Model.PhoneNumber:"  -")</div>
                    <div class="card-text"><strong>Address: </strong>@(Model.Address!=null?Model.Address:"  -")</div>
                    <div class="card-text"><strong>Website: </strong>@(Model.WebsiteAddress != null ? Model.WebsiteAddress:"  -")</div>
                    <div class="card-text"><strong>Sector: </strong>@Model.JobSectorName</div>
                    <br />
                    <a class="btn btn-primary" asp-controller="Employers" asp-action="UpdateProfile">Update profile details</a>
                </div>

                <div class="card-body col-6">
                    <h5 class="card-title" style="display:inline-block"><strong>Contact Person Information:</strong></h5>
                    <div class="card-text"><strong>Name: </strong>@Model.ContactPersonNames</div>
                    <div class="card-text"><strong>Email Address: </strong>@Model.ContactPersonEmail</div>
                    <div class="card-text"><strong>Phone Number: </strong>@(Model.ContactPersonPhoneNumber!=null?Model.ContactPersonPhoneNumber : "  -")</div>
                    <div class="card-text"><strong>Position: </strong>@(Model.ContactPersonPosition!=null?Model.ContactPersonPosition : "  -")</div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="card flex-fill">
            <div class="card-body">
                <h5 class="card-title" style="display:inline-block"><strong>My Actions:</strong></h5>
                <div class="card-text">
                    <strong>Post a Job Offer:   </strong>
                    Post a
                    <a style="display:inline" href="/JobOffers/Post">
                        <strong>
                            new Job Offer
                        </strong>
                    </a>
                </div>
                <div class="card-text">
                    <strong>My Job Offers:   </strong>
                    Review the history and details of
                    <a style="display:inline" href="/JobOffers/MyOffers">
                        <strong>
                            your Job Offers
                        </strong>
                    </a>
                    view and manage their current status
                </div>
                <div class="card-text">
                    <strong>Account management:   </strong>
                    Manage your Recruit.Me account,
                    <a style="display:inline" href="/Identity/Account/Manage/ChangePassword">
                        <strong>
                            reset your password
                        </strong>
                    </a>
                    or
                    <a style="display:inline" href="/Identity/Account/Manage/Email">
                        <strong>
                            update your email address
                        </strong>
                    </a>
                </div>
            </div>
        </div>
    </div>
}
