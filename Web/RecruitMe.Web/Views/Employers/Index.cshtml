@model RecruitMe.Web.ViewModels.Shared.IndexViewModel

@{
    ViewData["Title"] = "Employers Homepage";
}

<h1>@ViewData["Title"]</h1>

@if (this.TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<div>
    <h3>Welcome!</h3>
</div>
<hr />
@if (!User.Identity.IsAuthenticated)
{
    <p>Looking for the perfect candidate for your position?</p>
    <p>Our platform connects you with top-tier motivated and qualified professionals looking for an exciting new career which will help you boost your business and reach your goals! </p>

    <p>If you are interested in posting a job offer on our platform and connecting with potential candidates, <a style="display:inline" href="/Identity/Account/Register"><strong>please register here.</strong></a></p>
    <p>If you already have an account, <a style="display:inline" href="/Identity/Account/Login"><strong>please sign in.</strong></a></p>

    <br />
    <hr />
    <div class="row">
        <div class="card text-center">
            <div class="card-body">
                <h4 class="card-title" style="display:inline-block">Testimonials</h4>
                <hr />
                <p class="card-text"><h6>John Smith, Senior .NET Developer</h6></p>
                <p>Working with Recruit.Me has helped me find my current position as a developer in my dream company. The process was easy and effortless and I would recommend the platform to all of my friends and acquaintances.</p>
            </div>
            <div class="card-body">
                <p class="card-text"><h6>ACME Inc.</h6></p>
                <p>The platform has helped our company hire some of our best employees easily and efficiently, which has brought immense value and know-how to our business not only with our clients, but with our partners as well!</p>
            </div>
        </div>
    </div>
}
else
{
    <p>
        <h5>
            Ready to meet our professionals and hire the perfect candidate?
        </h5>
    </p>
    if (!this.Model.IsProfileCreated)
    {
        <p><h5>Let us know more about you by <a style="display:inline" href="/Employers/CreateProfile"><strong>filling out your profile details.</strong></a></h5></p>
    }
    else
    {
        <p><h5>Let us know what you are looking for in an applicant by <a style="display:inline" href="/JobOffers/Post"><strong>posting a new offer!</strong></a></h5></p>
    }
    <br />
    <hr />
    <partial name="_IndexPartial" model="@Model" />

}