@model RecruitMe.Web.ViewModels.Candidates.ProfileViewModel
@{
    ViewData["Title"] = "My Profile";
    string candidateName = this.Model.Name != null ? ", " + this.Model.Name : string.Empty;
    string profilePictureUrl = this.Model.ProfilePictureUrl != null ? this.Model.ProfilePictureUrl : "/img/profile-placeholder.png";
}

<h1>@ViewData["Title"]</h1>

@if (this.TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<div>
    <h3>@("Welcome"+candidateName)</h3>
</div>
<hr />
<div class="row">
    <div class="card">
        <img class="card-img-top img-thumbnail" src="@profilePictureUrl" style="width: 300px; height: 300px;">
    </div>
    <div class="card flex-fill">
        <div class="card-body">
            <h5 class="card-title" style="display:inline-block"><strong>Profile Details:</strong></h5>
            <a class="float-right btn btn-primary" asp-controller="Candidates" asp-action="UpdateProfile">Update profile details</a>
            <div class="card-text"><strong>Name: </strong>@Model.Name</div>
            <div class="card-text"><strong>Email Address: </strong>@Model.ApplicationUserEmail</div>
            <div class="card-text"><strong>Phone Number: </strong>@(Model.PhoneNumber!=null?Model.PhoneNumber:"  -")</div>
            <br />
            <div class="card-text"><strong>Education: </strong>@Model.Education</div>
            <div class="card-text"><strong>Languages: </strong>@(Model.Languages!=string.Empty?Model.Languages : " -")</div>
            <div class="card-text"><strong>Skills: </strong>@(Model.Skills!=string.Empty?Model.Skills : "  -")</div>
        </div>
    </div>
</div>
<div class="row">
    <div class="card flex-fill">
        <div class="card-body">
            <h5 class="card-title" style="display:inline-block"><strong>About Me:</strong></h5>
            <div class="card-text">@(Model.AboutMe!=null?Model.AboutMe:"Nothing to show here.")</div>
        </div>
    </div>
</div>
<div class="row">
    <div class="card flex-fill">
        <div class="card-body">
            <h5 class="card-title" style="display:inline-block"><strong>My Links:</strong></h5>
            <div class="card-text">
                <strong>My Documents:   </strong>
                View and manage your
                <a style="display:inline" href="/Documents/All">
                    <strong>
                        documents portfolio
                    </strong>
                </a>
            </div>
            <div class="card-text">
                <strong>My Job Applications:   </strong>
                Review the history and details of your
                <a style="display:inline" href="/JobApplications/All">
                    <strong>
                        job applications,
                    </strong>
                </a>
                view and manage their current status
            </div>
            <div class="card-text">
                <strong>Account management:   </strong>
                Manage your Recruit.Me account,
                <a style="display:inline" href="/Identity/Account/Manage/ChangePassword">
                    <strong>
                        reset your password
                    </strong>
                </a>
                or
                <a style="display:inline" href="/Identity/Account/Manage/Email">
                    <strong>
                        update your email address
                    </strong>
                </a>
            </div>
        </div>
    </div>
</div>
