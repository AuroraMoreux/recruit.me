@model RecruitMe.Web.ViewModels.Shared.IndexViewModel
@{
    ViewData["Title"] = "Candidates Homepage";
}

<h1>@ViewData["Title"]</h1>

@if (this.TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<div>
    <h3>Welcome!</h3>
</div>
<hr />
@if (!User.Identity.IsAuthenticated)
{
    <p>Our platform provides access to thousands of job offers posted by leading companies and recruitment agencies operating in all kinds of sectors, from healthcare and education to IT, the entertainment industry, science, construction and many more!</p>

    <p>If you are interested in browsing all of the currently opened positions to find your next career, <a style="display:inline" href="/Identity/Account/Register"><strong>please register here.</strong></a></p>
    <p>If you already have an account, <a style="display:inline" href="/Identity/Account/Login"><strong>please sign in.</strong></a></p>

    <div class="row">
        <div class="card text-center">
            <div class="card-body">
                <h4 class="card-title" style="display:inline-block">Success Stories</h4>
                <hr />
                <p class="card-text"><h6>John Smith, Senior .NET Developer</h6></p>
                <p>Working with Recruit.Me has helped me find my current position as a developer in my dream company. The process was easy and effortless and I would recommend the platform to all of my friends and acquaintances.</p>
            </div>
            <div class="card-body">
                <p class="card-text"><h6>ACME Inc.</h6></p>
                <p>The platform has helped our company hire some of our best employees easily and efficiently, which has brought immense value and know-how to our business not only with our clients, but with our partners as well!</p>
            </div>
        </div>
    </div>
}
else
{
    <p>
        <h5>
            Ready to find your new career?
        </h5>
    </p>
    if (!this.Model.IsProfileCreated)
    {
        <p><h5>Let us know more about you by <a style="display:inline" href="/Candidates/CreateProfile"><strong>filling out your profile details.</strong></a></h5></p>
    }
    else
    {
        <p><h5>Have a look at our latest offers or check out the offers of our top employers, or <a style="display:inline" href="/JobOffers/All"><strong>browse all offers.</strong></a></h5></p>
    }
    <br />
    <hr />
    <partial name="_IndexPartial" model="@Model" />
}
