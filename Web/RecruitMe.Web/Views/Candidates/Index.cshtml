@model RecruitMe.Web.ViewModels.Candidates.IndexViewModel
@{
    ViewData["Title"] = "Candidates Homepage";
    string candidateName = this.Model.Name != null ? ", " + this.Model.Name : string.Empty;
    string profilePictureUrl = this.Model.ProfilePictureUrl != null ? this.Model.ProfilePictureUrl : "/img/profile-placeholder.png";
}

<h1>@ViewData["Title"]</h1>

@if (this.TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<div>
    <h3>Welcome @candidateName</h3>
</div>
<hr />
@if (!User.Identity.IsAuthenticated)
{
    <p>Our platform provides access to thousands of job offers posted by leading companies and recruitment agencies operating in all kinds of sectors, from healthcare and education to IT, the entertainment industry, science, construction and many more!</p>

    <p>If you are interested in browsing all of the currently opened positions to find your next career, <a style="display:inline" href="/Identity/Account/Register">please register here.</a></p>
    <br />
    <hr />
    <div class="row">
        <div class="card text-center">
            <div class="card-body">
                <h4 class="card-title" style="display:inline-block">Testimonials</h4>
                <hr />
                <p class="card-text"><h6>John Smith, Senior .NET Developer</h6></p>
                <p>Working with Recruit.Me has helped me find my current position as a developer in my dream company. The process was easy and effortless and I would recommend the platform to all of my friends and acquaintances.</p>
            </div>
            <div class="card-body">
                <p class="card-text"><h6>ACME Inc.</h6></p>
                <p>The platform has helped our company hire some of our best employees easily and efficiently, which has brought immense value and know-how to our business not only with our clients, but with our partners as well!</p>
            </div>
        </div>
    </div>
}
else if (!Model.IsProfileCreated)
{
    <p>Ready to find your new career? Let us know more about you by <a style="display:inline" href="/Candidates/CreateProfile">filling out your profile details.</a></p>
    <br />
    <hr />

    <div class="row">
        <div class="card text-center">
            <div class="card-body">
                <h4 class="card-title" style="display:inline-block">Testimonials</h4>
                <hr />
                <p class="card-text"><h6>John Smith, Senior .NET Developer</h6></p>
                <p>Working with Recruit.Me has helped me find my current position as a developer in my dream company. The process was easy and effortless and I would recommend the platform to all of my friends and acquaintances.</p>
            </div>
            <div class="card-body">
                <p class="card-text"><h6>ACME Inc.</h6></p>
                <p>The platform has helped our company hire some of our best employees easily and efficiently, which has brought immense value and know-how to our business not only with our clients, but with our partners as well!</p>
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="card">
            <img class="card-img-top img-thumbnail" src="@profilePictureUrl" style="width: 300px; height: 300px;">
        </div>
        <div class="card flex-fill">
            <div class="card-body">
                <h5 class="card-title" style="display:inline-block"><strong>Profile Details:</strong></h5>
                <a class="float-right btn btn-primary" asp-controller="Candidates" asp-action="UpdateProfile">Update profile details</a>
                <div class="card-text"><strong>Name: </strong>@Model.Name</div>
                <div class="card-text"><strong>Email Address: </strong>@Model.ApplicationUserEmail</div>
                <div class="card-text"><strong>Phone Number: </strong>@(Model.PhoneNumber!=null?Model.PhoneNumber:"  -")</div>
                <div class="card-text"><strong>Education: </strong>@Model.Education</div>
                <div class="card-text">
                    <strong>Languages: </strong>@(Model.Languages!=string.Empty?Model.Languages : " -")<p>
                        <div class="card-text"><strong>Skills: </strong>@(Model.Skills!=string.Empty?Model.Skills : "  -")</div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="card flex-fill">
            <div class="card-body">
                <h5 class="card-title" style="display:inline-block"><strong>My Actions:</strong></h5>
                <div class="card-text">
                    <strong>My Documents:   </strong>
                    View and manage your
                    <a style="display:inline" href="/Documents/All">
                        <strong>
                            documents portfolio
                        </strong>
                    </a>
                </div>
                <div class="card-text">
                    <strong>My Job Applications:   </strong>
                    Review the history and details of your
                    <a style="display:inline" href="/JobApplications/All">
                        <strong>
                            job applications,
                        </strong>
                    </a>
                    view and manage their current status
                </div>
                <div class="card-text">
                    <strong>Account management:   </strong>
                    Manage your Recruit.Me account,
                    <a style="display:inline" href="/Identity/Account/Manage/ChangePassword">
                        <strong>
                            reset your password
                        </strong>
                    </a>
                    or
                    <a style="display:inline" href="/Identity/Account/Manage/Email">
                        <strong>
                            update your email address
                        </strong>
                    </a>
                </div>
            </div>
        </div>
    </div>
}
